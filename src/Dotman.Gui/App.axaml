<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Dotman.Gui.App"
             RequestedThemeVariant="Dark">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Dotman.Gui/Styles/DotmanTheme.axaml" />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <!-- Brand Colors -->
            <Color x:Key="DotmanPrimaryColor">#6366F1</Color>
            <Color x:Key="DotmanSecondaryColor">#8B5CF6</Color>
            <Color x:Key="DotmanAccentColor">#22D3EE</Color>
            <Color x:Key="DotmanSuccessColor">#22C55E</Color>
            <Color x:Key="DotmanWarningColor">#F59E0B</Color>
            <Color x:Key="DotmanDangerColor">#EF4444</Color>

            <!-- Background Colors -->
            <Color x:Key="DotmanBgPrimary">#0F0F23</Color>
            <Color x:Key="DotmanBgSecondary">#1A1A2E</Color>
            <Color x:Key="DotmanBgTertiary">#252542</Color>
            <Color x:Key="DotmanBgCard">#1E1E3F</Color>

            <!-- Text Colors -->
            <Color x:Key="DotmanTextPrimary">#F8FAFC</Color>
            <Color x:Key="DotmanTextSecondary">#94A3B8</Color>
            <Color x:Key="DotmanTextMuted">#64748B</Color>

            <!-- Brushes -->
            <SolidColorBrush x:Key="DotmanPrimaryBrush" Color="{StaticResource DotmanPrimaryColor}" />
            <SolidColorBrush x:Key="DotmanSecondaryBrush" Color="{StaticResource DotmanSecondaryColor}" />
            <SolidColorBrush x:Key="DotmanAccentBrush" Color="{StaticResource DotmanAccentColor}" />
            <SolidColorBrush x:Key="DotmanSuccessBrush" Color="{StaticResource DotmanSuccessColor}" />
            <SolidColorBrush x:Key="DotmanWarningBrush" Color="{StaticResource DotmanWarningColor}" />
            <SolidColorBrush x:Key="DotmanDangerBrush" Color="{StaticResource DotmanDangerColor}" />

            <SolidColorBrush x:Key="DotmanBgPrimaryBrush" Color="{StaticResource DotmanBgPrimary}" />
            <SolidColorBrush x:Key="DotmanBgSecondaryBrush" Color="{StaticResource DotmanBgSecondary}" />
            <SolidColorBrush x:Key="DotmanBgTertiaryBrush" Color="{StaticResource DotmanBgTertiary}" />
            <SolidColorBrush x:Key="DotmanBgCardBrush" Color="{StaticResource DotmanBgCard}" />

            <SolidColorBrush x:Key="DotmanTextPrimaryBrush" Color="{StaticResource DotmanTextPrimary}" />
            <SolidColorBrush x:Key="DotmanTextSecondaryBrush" Color="{StaticResource DotmanTextSecondary}" />
            <SolidColorBrush x:Key="DotmanTextMutedBrush" Color="{StaticResource DotmanTextMuted}" />

            <!-- Gradient Brushes -->
            <LinearGradientBrush x:Key="DotmanGradientBrush" StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="{StaticResource DotmanPrimaryColor}" Offset="0" />
                <GradientStop Color="{StaticResource DotmanSecondaryColor}" Offset="1" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
