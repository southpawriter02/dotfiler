<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Dotman.Gui.ViewModels"
        xmlns:views="using:Dotman.Gui.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Dotman.Gui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Dotman - Dotfile Manager"
        Width="1200" Height="800"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource DotmanBgPrimaryBrush}" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto, *">
        <!-- Custom Title Bar -->
        <Border Grid.Row="0"
                Background="{DynamicResource DotmanBgSecondaryBrush}"
                Padding="16,8">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <!-- App Title and Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <!-- Logo -->
                    <Border Width="32" Height="32" CornerRadius="8"
                            Background="{DynamicResource DotmanGradientBrush}">
                        <TextBlock Text="D" FontSize="18" FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Dotman" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource DotmanTextPrimaryBrush}"/>
                        <TextBlock Text="Dotfile Manager" FontSize="11"
                                   Foreground="{DynamicResource DotmanTextMutedBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            HorizontalAlignment="Center" Spacing="4">
                    <RadioButton Classes="nav-btn" GroupName="Navigation"
                                 IsChecked="True"
                                 Command="{Binding NavigateToDashboardCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE80F;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="14"/>
                            <TextBlock Text="Dashboard"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Classes="nav-btn" GroupName="Navigation"
                                 Command="{Binding NavigateToFilesCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE8B7;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="14"/>
                            <TextBlock Text="Files"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Classes="nav-btn" GroupName="Navigation"
                                 Command="{Binding NavigateToSettingsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="&#xE713;" FontFamily="{StaticResource SymbolThemeFontFamily}"
                                       FontSize="14"/>
                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <!-- Status indicator -->
                    <Border Classes="badge-info" VerticalAlignment="Center"
                            IsVisible="{Binding IsRepositoryInitialized}">
                        <TextBlock Text="{Binding StatusMessage}" FontSize="12"
                                   Foreground="{DynamicResource DotmanAccentBrush}"/>
                    </Border>

                    <!-- Sync button -->
                    <Button Classes="primary" Command="{Binding SyncCommand}"
                            IsEnabled="{Binding IsRepositoryInitialized}"
                            ToolTip.Tip="Sync with remote">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="&#xE895;" FontFamily="{StaticResource SymbolThemeFontFamily}"/>
                            <TextBlock Text="Sync"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Padding="24">
            <ContentControl Content="{Binding CurrentView}">
                <ContentControl.DataTemplates>
                    <DataTemplate DataType="vm:DashboardViewModel">
                        <views:DashboardView />
                    </DataTemplate>
                    <DataTemplate DataType="vm:FilesViewModel">
                        <views:FilesView />
                    </DataTemplate>
                    <DataTemplate DataType="vm:SettingsViewModel">
                        <views:SettingsView />
                    </DataTemplate>
                </ContentControl.DataTemplates>
            </ContentControl>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2"
                Background="#80000000"
                IsVisible="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Loading..."
                           Foreground="{DynamicResource DotmanTextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
